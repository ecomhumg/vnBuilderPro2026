{
    "name": "ScholarDeepResearch-Swarm",
    "version": "2.0.0",
    "topology": "HierarchicalSwarm",
    "auto_persistence": {
        "enabled": true,
        "config_path": "Context-Layer/Second-Brain/Memory/auto-persistence-config.json",
        "output_path": "Context-Layer/Second-Brain/Memory/PhaseOutputs/",
        "dynamic_session_folder": {
            "enabled": true,
            "name_source": "memory_bus.research_topic",
            "fallback_source": "memory_bus.query.original",
            "fallback_name": "session_{timestamp}",
            "create_after_tier": 1,
            "date_format": "YYYY-MM-DD",
            "slug_max_length": 50
        }
    },
    "tiers": [
        {
            "id": 1,
            "name": "Query & Intelligence",
            "workers": [
                "W01",
                "W02",
                "W03"
            ],
            "parallel": true,
            "next": 2,
            "on_complete": [
                "generate_session_folder",
                "save_phase_output"
            ],
            "output_file": "phase-01-query.json",
            "triggers_session_naming": true
        },
        {
            "id": 2,
            "name": "Search Strategy",
            "workers": [
                "W04",
                "W05"
            ],
            "parallel": true,
            "next": 3,
            "on_complete": "save_phase_output",
            "output_file": "phase-02-strategy.json"
        },
        {
            "id": 3,
            "name": "Search Acquisition",
            "workers": [
                "W06",
                "W07",
                "W08",
                "W21"
            ],
            "parallel": true,
            "next": 4,
            "on_complete": "save_phase_output",
            "output_file": "phase-03-search.json"
        },
        {
            "id": 4,
            "name": "Content Extraction",
            "workers": [
                "W09",
                "W10"
            ],
            "parallel": true,
            "next": 5,
            "on_complete": "save_phase_output",
            "output_file": "phase-04-extraction.json"
        },
        {
            "id": 5,
            "name": "Critical Reading",
            "workers": [
                "W11",
                "W12",
                "W13",
                "W14"
            ],
            "parallel": true,
            "next": 6,
            "on_complete": "save_phase_output",
            "output_file": "phase-05-reading.json"
        },
        {
            "id": 6,
            "name": "Analysis & Synthesis",
            "workers": [
                "W15",
                "W16",
                "W17"
            ],
            "parallel": true,
            "next": 7,
            "on_complete": "save_phase_output",
            "output_file": "phase-06-analysis.json"
        },
        {
            "id": 7,
            "name": "Quality Validation",
            "workers": [
                "W18",
                "W19"
            ],
            "parallel": true,
            "blocking": true,
            "next": 8,
            "on_complete": "save_phase_output",
            "output_file": "phase-07-validation.json"
        },
        {
            "id": 8,
            "name": "Delivery & Evolution",
            "workers": [
                "W20",
                "W22"
            ],
            "parallel": true,
            "next": null,
            "on_complete": [
                "save_phase_output",
                "create_session_metadata"
            ],
            "output_file": "phase-08-report.json"
        }
    ],
    "routing": {
        "default": "sequential_tier",
        "fallback": "retry_with_backoff",
        "max_retries": 2
    },
    "hooks": {
        "on_session_start": "initialize_session",
        "on_tier_1_complete": "generate_session_folder",
        "on_tier_complete": "after_tier_complete",
        "on_session_complete": "aggregate_session",
        "on_error": "save_checkpoint"
    }
}