{
    "version": "1.0.0",
    "description": "Context Retrieval Index Configuration",
    "indexes": {
        "playbooks": {
            "path": "../Knowledge-Base/PLAYBOOKS/",
            "pattern": "*.md",
            "refresh": "on_change"
        },
        "skills": {
            "path": "../Knowledge-Base/SKILLS/",
            "pattern": "*.md",
            "refresh": "on_change"
        },
        "experience": {
            "path": "../Knowledge-Base/EXPERIENCE/",
            "pattern": "*.md",
            "refresh": "on_change"
        },
        "brain": {
            "path": "../Second-Brain/Brain/",
            "pattern": "**/*.md",
            "refresh": "on_change"
        },
        "memory": {
            "path": "../Second-Brain/Memory/",
            "pattern": "**/*.json",
            "refresh": "per_session"
        }
    },
    "search": {
        "algorithm": "semantic",
        "relevance_threshold": 0.7,
        "max_results": 10,
        "rerank": true
    },
    "cache": {
        "enabled": true,
        "ttl_seconds": 3600,
        "path": "./cache/"
    },
    "quality_hooks": {
        "tier_1": [
            "playbooks",
            "experience"
        ],
        "tier_2": [
            "skills",
            "brain"
        ],
        "tier_3": [
            "skills",
            "playbooks"
        ],
        "tier_4": [
            "skills",
            "experience"
        ],
        "tier_5": [
            "playbooks",
            "skills"
        ],
        "tier_6": [
            "skills",
            "brain"
        ],
        "tier_7": [
            "playbooks",
            "experience"
        ],
        "tier_8": [
            "memory",
            "brain"
        ]
    }
}