{
    "version": "2.0.0",
    "description": "Auto-Persistence Configuration for ScholarDeepResearch-Workforce",
    "enabled": true,
    "persistence_mode": "per_phase",
    "storage_path": "./PhaseOutputs/{session_folder}/",
    "session_naming": {
        "enabled": true,
        "source_key": "research_topic",
        "format": "{date}_{slug}",
        "slug_rules": {
            "max_length": 50,
            "lowercase": true,
            "replace_spaces": "_",
            "remove_special_chars": true,
            "allowed_chars": "a-z0-9_",
            "remove_patterns": [
                ":",
                "(",
                ")",
                "-",
                ",",
                ".",
                "'",
                "\""
            ]
        },
        "collision_handling": {
            "enabled": true,
            "suffix_format": "_{counter}",
            "max_counter": 99
        }
    },
    "session_metadata": {
        "create_metadata_file": true,
        "metadata_filename": "session-metadata.json",
        "include_fields": [
            "research_topic",
            "mode",
            "started_at",
            "completed_at",
            "total_phases",
            "quality_score",
            "workforce_version"
        ]
    },
    "phases": {
        "tier_1": {
            "name": "Query Processing",
            "auto_save": true,
            "output_file": "phase-01-query.json",
            "memory_keys": [
                "query.original",
                "query.clarified",
                "query.domain",
                "query.intent",
                "input.multimodal"
            ],
            "triggers_session_folder": true
        },
        "tier_2": {
            "name": "Search Strategy",
            "auto_save": true,
            "output_file": "phase-02-strategy.json",
            "memory_keys": [
                "search.strategy",
                "search.keywords",
                "sources.priority",
                "sources.quotas"
            ]
        },
        "tier_3": {
            "name": "Search Acquisition",
            "auto_save": true,
            "output_file": "phase-03-search.json",
            "memory_keys": [
                "results.scholar",
                "results.arxiv",
                "results.pubmed",
                "results.biorxiv",
                "results.patents",
                "results.web",
                "results.merged"
            ]
        },
        "tier_4": {
            "name": "Content Extraction",
            "auto_save": true,
            "output_file": "phase-04-extraction.json",
            "memory_keys": [
                "content.fulltext",
                "content.failed",
                "datasets.processed"
            ]
        },
        "tier_5": {
            "name": "Critical Reading",
            "auto_save": true,
            "output_file": "phase-05-reading.json",
            "memory_keys": [
                "reading.summaries",
                "reading.questions",
                "reading.inquiry",
                "reading.contrasts",
                "reading.visuals",
                "reading.assumptions"
            ]
        },
        "tier_6": {
            "name": "Analysis & Synthesis",
            "auto_save": true,
            "output_file": "phase-06-analysis.json",
            "memory_keys": [
                "analysis.results",
                "visuals.charts",
                "verification.facts"
            ]
        },
        "tier_7": {
            "name": "Quality Validation",
            "auto_save": true,
            "output_file": "phase-07-validation.json",
            "memory_keys": [
                "validation.citations",
                "validation.links",
                "quality.score",
                "quality.passed"
            ]
        },
        "tier_8": {
            "name": "Report Generation",
            "auto_save": true,
            "output_file": "phase-08-report.json",
            "memory_keys": [
                "output.report",
                "efficiency.metrics"
            ]
        }
    },
    "retention": {
        "max_sessions": 100,
        "max_age_days": 90,
        "compress_old": true,
        "archive_after_days": 30
    },
    "hooks": {
        "on_session_start": "generate_session_folder",
        "on_phase_complete": "save_phase_output",
        "on_session_complete": "create_session_metadata"
    }
}